# Auth Service Environment Configuration

# Server
SERVER_PORT=9001
SERVER_MODE=development
SERVER_NAME=auth-service

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=auth_db
DB_SSLMODE=disable
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=1h

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h
JWT_ISSUER=minisource-auth

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY=5m
OTP_MAX_ATTEMPTS=5

# Password Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# Google OAuth2 (TODO: Configure)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:9001/api/v1/auth/google/callback

# CORS
CORS_ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=debug
LOG_OUTPUT=stdout
LOG_FORMAT=json

# Notifier Integration (for sending OTP via SMS/Email)
NOTIFIER_ENABLED=true
NOTIFIER_GRPC_ADDRESS=localhost:9003
NOTIFIER_HTTP_URL=http://localhost:9002
NOTIFIER_CLIENT_ID=auth-service
NOTIFIER_CLIENT_SECRET=auth-service-secret

# gRPC Server
GRPC_ENABLED=true
GRPC_PORT=9004

# Tracing (OpenTelemetry + Jaeger)
TRACING_ENABLED=false
JAEGER_URL=http://localhost:14268/api/traces
TRACING_SERVICE_NAME=auth-service

# Sysadmin Credentials (seeded on startup if set)
SYSADMIN_EMAIL=admin@example.com
SYSADMIN_PASSWORD=changeme123

# ====================================
# Service OAuth Client Credentials
# These are used for service-to-service authentication
# Each microservice needs a unique client ID and secret
# The secrets here will be bcrypt hashed when seeded to DB
# ====================================
# Auth Service (for calling notifier to send OTP, emails)
SERVICE_AUTH_CLIENT_ID=auth-service
SERVICE_AUTH_CLIENT_SECRET=auth-service-secret-key

# Notifier Service (for validating tokens)
SERVICE_NOTIFIER_CLIENT_ID=notifier-service
SERVICE_NOTIFIER_CLIENT_SECRET=notifier-service-secret-key

# Gateway Service (for token validation and routing)
SERVICE_GATEWAY_CLIENT_ID=gateway-service
SERVICE_GATEWAY_CLIENT_SECRET=gateway-service-secret-key

# Log Service (for receiving and storing logs)
SERVICE_LOG_CLIENT_ID=log-service
SERVICE_LOG_CLIENT_SECRET=log-service-secret-key

# Scheduler Service (for job scheduling)
SERVICE_SCHEDULER_CLIENT_ID=scheduler-service
SERVICE_SCHEDULER_CLIENT_SECRET=scheduler-service-secret-key

# Storage Service (for file management)
SERVICE_STORAGE_CLIENT_ID=storage-service
SERVICE_STORAGE_CLIENT_SECRET=storage-service-secret-key

# Comment Service (for comments, replies, reactions)
SERVICE_COMMENT_CLIENT_ID=comment-service
SERVICE_COMMENT_CLIENT_SECRET=comment-service-secret-key

# Feedback Service (for user feedback, voting)
SERVICE_FEEDBACK_CLIENT_ID=feedback-service
SERVICE_FEEDBACK_CLIENT_SECRET=feedback-service-secret-key

# Ticket Service (for support tickets)
SERVICE_TICKET_CLIENT_ID=ticket-service
SERVICE_TICKET_CLIENT_SECRET=ticket-service-secret-key

# Payment Service (for payment processing)
SERVICE_PAYMENT_CLIENT_ID=payment-service
SERVICE_PAYMENT_CLIENT_SECRET=payment-service-secret-key
